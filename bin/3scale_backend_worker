#! /usr/bin/env ruby

require '3scale/backend'

if ARGV.include? '--no-daemonize'
  ThreeScale::Backend::Worker.work
else
  require 'daemons'

  Daemons.run_proc('3scale_backend_worker', :multiple => true,
                                            :dir_mode => :normal,
                                            :dir      => '/var/run/3scale') do
    ThreeScale::Backend::Worker.work
  end
end
